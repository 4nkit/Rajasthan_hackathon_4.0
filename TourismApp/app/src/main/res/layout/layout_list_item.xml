        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:id="@+id/text1"
        android:layout_weight="4"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/call"
        android:layout_weight="1"
        android:id="@+id/call" />

</LinearLayout>